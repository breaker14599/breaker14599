package main

import (
	"fmt"
	"log"
	"net/http"

	"github.com/gorilla/mux"
)

func homePage(w http.ResponseWriter, r *http.Request) {
	fmt.Fprintf(w, "BASIC API")
	fmt.Println(" mux works")

}

func handleRequests() {
	r := mux.NewRouter()
	r.HandleFunc("/", homePage).Methods(http.MethodGet)
	log.Fatal(http.ListenAndServe(":10000", r))
}

func main() {
	handleRequests()
}
